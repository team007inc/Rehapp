<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a390l.team.rehapp.ProfileTherapist">

    <android.support.constraint.ConstraintLayout
        android:layout_width="352dp"
        android:id="@+id/OverViewLO"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/topConstraintLO"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp">

        <ProgressBar
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
            android:layout_width="352dp"
            android:id="@+id/SlackersPB"
            android:layout_height="25dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProgressReport"
            android:text="0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/SlackersPB"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="368dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_height="50dp"
        android:id="@+id/topConstraintLO">

        <TextView
            android:id="@+id/txtViewTherapistName"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ListView
        android:layout_width="368dp"
        android:layout_height="361dp"
        android:id="@+id/ClientListView"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/OverViewLO" /><![CDATA[


>
]]>
</android.support.constraint.ConstraintLayout>
