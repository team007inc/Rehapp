<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_ClientListName"
        android:text="Name"
        android:layout_height="25dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textSize="40px"
        android:layout_width="206dp">
    </TextView>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/item_ClientProgress"
        android:max="100"
        android:progress="50"
        android:layout_below="@+id/item_ClientListName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Age"
        android:layout_height="25dp"
        android:id="@+id/item_ClientListAge"
        android:textStyle="normal|bold"
        android:textSize="40px"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_ClientListName"
        android:layout_toEndOf="@+id/item_ClientListName"
        android:layout_width="50dp" />

    <TextView
        android:text="Mass"
        android:layout_height="25dp"
        android:id="@+id/item_ClientListMass"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="40px"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_ClientListAge"
        android:layout_toEndOf="@+id/item_ClientListAge"
        android:layout_width="50dp" />

    <TextView
        android:layout_height="25dp"
        android:id="@+id/item_ClientListAssignedCalories"
        android:textAlignment="center"
        android:layout_width="75dp"
        android:text="Assigned Calories"
        android:textStyle="normal|bold"
        android:textSize="40px"
        android:layout_below="@+id/item_ClientProgress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="40px"
        android:layout_below="@+id/item_ClientProgress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Current Calories"
        android:layout_height="25dp"
        android:id="@+id/item_ClientListCurrentCalories"
        android:textStyle="normal|bold"
        android:textSize="40px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="75dp" />


</RelativeLayout>