<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_training"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="a390l.team.rehapp.TrainingActivity"
    tools:showIn="@layout/activity_training">


    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:id="@+id/mGraph"
        android:layout_height="350px" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/labelHeartRate"
        android:layout_above="@+id/labelInstantSpeed"
        android:layout_alignStart="@+id/labelInstantSpeed" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MACaddr"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelStatusMsg"
        android:text="Status"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/labelInstantSpeed" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:id="@+id/sGraph"
        android:layout_height="350px"
        android:layout_below="@+id/mGraph"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mDist"
        android:layout_above="@+id/labelInstantSpeed"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mSave"
        android:layout_above="@+id/mDist"
        android:layout_toEndOf="@+id/labelHeartRate"
        android:layout_marginStart="13dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/labelInstantSpeed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
